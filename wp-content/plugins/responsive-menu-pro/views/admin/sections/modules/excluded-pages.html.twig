<tr class='pro-row'>
    <td class='col-left col-md-3'>
        <label for='items_order' class='control-label'>Excluded Pages</label>
        <div class='sub-text'>
            Select one or more pages that will be excluded from displaying the plugin.
        </div>
    </td>
    <td class='col-right pro'>
        {% set excluded_pages = options.excluded_pages|json_decode %}
        <select class='selectpicker show-tick' name='menu[excluded_pages][]' data-live-search='true' multiple>
            {% for id, title in all_pages() %}
                <option value='{{ id }}' {% if id in excluded_pages %}selected='selected'{% endif %}>{{ title }}</option>
            {% endfor %}
        </select>
    </td>
</tr>